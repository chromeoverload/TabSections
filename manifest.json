{
  "manifest_version": 2,
  "name": "Tab Partitions",
  "description": "Create simple dividers between groups of tabs in your browser.",
  "version": "1.0",
  "background": {
    "page": "js/background.html"
    /*"persistent": false*/
  },
  "browser_action": {
    "default_icon": "images/tabFlipper16.png",
    "default_title": "Press Ctrl(Win)/Command(Mac)+Shift+ Left or Right to Flip Tabs"
  },
  "commands": {
    "create-divider-right": {
      "suggested_key": {
        "default": "Ctrl+Shift+Right",
        "mac": "Command+Shift+Right"
      },
      "description": "Creates a divider to the right"
    },
    "create-divider-left": {
      "suggested_key": {
        "default": "Ctrl+Shift+Left",
        "mac": "Command+Shift+Left"
      },
      "description": "creates a divider to the left"
    },
    "delete-section": {
      "suggested_key": {
        "default": "Alt+W",
        "mac": "Alt+W"
      },
      "description": "deletes a section"
    }
  },
  "icons": {
    "16": "images/tabSections16.png",
    "32": "images/tabSections32.png",
    "48": "images/tabSections48.png",
    "128": "images/tabSections128.png"
  },
  "permissions": ["tabs"]
}

